{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "campaign.schema.v0.2.1.json",
  "title": "Floodline Campaign Schema v0.2.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "levels"
  ],
  "properties": {
    "meta": {
      "$ref": "#/$defs/meta"
    },
    "levels": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/levelRef"
      }
    }
  },
  "$defs": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "schemaVersion"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "schemaVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "levelRef": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "path"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}

